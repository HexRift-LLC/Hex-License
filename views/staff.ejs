<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hex License - Staff Panel</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dark-theme">
    <nav class="navbar">
        <div class="logo">Hex License</div>
        <div class="nav-links">
            <a href="/dashboard">Dashboard</a>
            <a href="/staff" class="active">Staff Panel</a>
            <a href="/auth/logout">Logout</a>
        </div>
    </nav>
      <div class="container">
          <div class="staff-grid">
              <div class="card action-card">
                  <h2>Products Management</h2>
                  <form id="productForm" class="staff-form">
                      <div class="form-group">
                          <label>Product Name</label>
                          <input type="text" name="productName" required placeholder="Enter product name">
                      </div>
                      <button type="submit" class="btn-primary">Add Product</button>
                  </form>
                  <div class="products-list">
                      <h3>Existing Products</h3>
                      <% products.forEach(product => { %>
                          <div class="product-item">
                              <span><%= product.name %></span>
                              <button class="delete-btn" onclick="deleteProduct('<%= product._id %>')">Delete</button>
                          </div>
                      <% }) %>
                  </div>
              </div>
              <div class="card action-card">
                  <h2>Generate License</h2>
                  <form id="generateForm" class="staff-form">
                      <div class="form-group">
                          <label>Duration (days)</label>
                          <input type="number" name="duration" min="1" required>
                      </div>
                      <div class="form-group">
                          <label>Quantity</label>
                          <input type="number" name="quantity" min="1" max="100" required>
                      </div>
                      <div class="form-group">
                          <label>Product</label>
                          <select name="product" class="product-select">
                              <option value="">Select Product</option>
                              <% products.forEach(product => { %>
                                  <option value="<%= product.name %>"><%= product.name %></option>
                              <% }) %>
                          </select>
                          <div class="or-divider">OR</div>
                          <input type="text" name="newProduct" placeholder="Enter new product name" class="product-input">
                      </div>
                      <div class="form-group">
                          <label>Assign to User</label>
                          <select name="userId" class="user-select">
                              <option value="">Select User</option>
                              <% users.forEach(user => { %>
                                  <option value="<%= user._id %>"><%= user.username %> (<%= user.discordId %>)</option>
                              <% }) %>
                          </select>
                          <div class="or-divider">OR</div>
                          <input type="text" name="discordId" placeholder="Enter Discord ID" class="discord-id-input">
                      </div>
                      <button type="submit" class="btn-primary">Generate Keys</button>
                  </form>
            </div>
            <div class="card stats-card">
                <h2>Statistics</h2>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-value"><%= activeKeys %></span>
                        <span class="stat-label">Active Keys</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value"><%= totalUsers %></span>
                        <span class="stat-label">Total Users</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card license-management">
            <h2>License Management</h2>
            <div class="license-cards">
                <% licenses.forEach(license => { %>
                    <div class="license-card <%= license.isActive ? 'active' : 'inactive' %>">
                        <div class="license-header">
                            <span class="status-badge <%= license.isActive ? 'active' : 'inactive' %>">
                                <%= license.isActive ? 'Active' : 'Inactive' %>
                            </span>
                            <span class="product-badge"><%= license.product %></span>
                        </div>
                        <div class="license-body">
                            <div class="key-section">
                                <label>License Key:</label>
                                <code><%= license.key %></code>
                            </div>
                            <div class="details">
                                <p>Expires: <%= license.expiresAt.toLocaleDateString() %></p>
                                <p>HWID: <%= license.hwid || 'Not bound' %></p>
                                <p>User: <%= license.user ? license.user.username : 'Unassigned' %></p>
                            </div>
                        </div>
                        <div class="license-actions">
                            <button onclick="toggleLicense('<%= license._id %>')" class="toggle-btn">Toggle Status</button>
                            <button onclick="deleteLicense('<%= license._id %>')" class="delete-btn">Delete</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

    <script src="/js/staff.js"></script>
</body>
</html>
