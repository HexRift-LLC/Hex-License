<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hex License - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body class="dark-theme">
    <nav class="navbar">
        <div class="logo-container">
            <div class="logo">Hex License</div>
        </div>
        <div class="burger" onclick="toggleMenu()">
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
        </div>
        <div class="nav-links">
            <a href="/dashboard" class="active">
                <i class="fas fa-home"></i>
                Dashboard
            </a>
            <% if (user && user.isStaff) { %>
                <a href="/staff">
                    <i class="fas fa-shield-alt"></i>
                    Staff Panel
                </a>
            <% } %>
            <a href="/auth/logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="dashboard-header fade-scale">
            <h1>Welcome, <span class="username"><%= user.username %></span></h1>
            <div class="user-stats">
                <div class="stat-box interactive-card">
                    <div class="stat-icon">
                        <i class="fas fa-key"></i>
                    </div>
                    <span class="stat-number"><%= licenses.length %></span>
                    <span class="stat-label">Total Licenses</span>
                </div>
                
                <div class="stat-box interactive-card">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <span class="stat-number"><%= licenses.filter(l => l.hwid).length %></span>
                    <span class="stat-label">Active Licenses</span>
                </div>
            
                <div class="stat-box interactive-card">
                    <div class="stat-icon">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <span class="stat-number"><%= licenses.filter(l => !l.hwid).length %></span>
                    <span class="stat-label">Inactive Licenses</span>
                </div>
            </div>            
        </div>

                <!-- Key Generation Section -->
                <div id="license-section" class="content-fade active">
                    <div class="card action-card interactive-card">
                        <h2 style="text-align: center;">Your Licenses</h2>
                        <div class="license-cards">
                        <% licenses.forEach(license => { %>
                            <div class="license-card interactive-card <%= license.isActive ? 'active' : 'inactive' %>">
                                <div class="license-header">
                                    <span class="status-badge <%= license.isActive ? 'active' : 'inactive' %>">
                                        <%= license.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                    <span class="product-badge"><%= license.product %></span>
                                </div>
                                <div class="license-info">
                                    <div class="info-grid">
                                        <div class="info-item">
                                            <span class="info-label">License Key</span>
                                            <div class="key-container">
                                                <code class="key-text"><%= license.key.substring(0, license.key.length / 2) %>...</code>
                                                <button class="copy-btn" onclick="copyKey('<%= license.key %>')">
                                                    <i class="fas fa-copy"></i> Copy
                                                </button>
                                            </div>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">HWID</span>
                                            <span class="info-value <%= license.hwid ? 'hwid-bound' : 'hwid-unbound' %>">
                                                <%= license.hwid ? license.hwid.substring(0, license.hwid.length / 2) + '...' : 'Not bound' %>
                                            </span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Created</span>
                                            <span class="info-value"><%= license.createdAt.toLocaleDateString() %></span>
                                        </div>
                                        <div class="info-item">
                                            <button onclick="resetHWID('<%= license._id %>')" 
                                                    class="reset-hwid-btn action-button"
                                                    <%= license.lastHwidReset && (new Date() - new Date(license.lastHwidReset)) < (2 * 24 * 60 * 60 * 1000) ? 'disabled' : '' %>>
                                                Reset HWID
                                                <% if (license.lastHwidReset) { %>
                                                    <span class="reset-countdown">
                                                        (Available <%= getTimeUntilReset(license.lastHwidReset) %>)
                                                    </span>
                                                <% } %>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
    <footer class="footer">
        <div class="footer-content">
            <p class="copyright">Â© 2023 - <%= new Date().getFullYear() %> <%= config.footer.copyright %> by <%= config.footer.company %>.</p>
        </div>
    </footer>

    <div class="notification-stack" id="notificationStack"></div>
    <% if (config.analytics.google.enabled) { %>
        <!-- Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=<%= config.analytics.google.tracking_id %>"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', '<%= config.analytics.google.tracking_id %>');
        </script>
    <% } %>
    
    <script src="/js/dashboard.js"></script>
</body>
</html>
