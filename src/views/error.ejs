<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Hex License - <%= errorType %> Error">
    <title>Hex License - <%= errorType %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body class="dark-theme">
    <main class="error-container">
        <div class="error-card fade-scale">
            <div class="error-icon" aria-hidden="true">
                <i class="fas <%= errorIcon %>"></i>
            </div>
            <h1>
                <%= errorTitle %>
            </h1>
            <p class="error-message">
                <%= errorMessage %>
            </p>
            
            <% if (typeof errorDetails !== 'undefined' && errorDetails) { %>
                <p class="error-details">
                    <%= errorDetails %>
                </p>
            <% } %>
            
            <% if (typeof errorCode !== 'undefined' && errorCode) { %>
                <div class="error-code">
                    Error Code: <%= errorCode %>
                </div>
            <% } %>

            <div class="error-actions">
                <% if (typeof errorActions !== 'undefined' && errorActions && errorActions.length > 0) { %>
                    <% errorActions.forEach(action => { %>
                        <a href="<%= action.url %>" class="<%= action.primary ? 'discord-btn' : 'action-btn' %> hover-glow">
                            <i class="fas <%= action.icon %>"></i> <%= action.text %>
                        </a>
                    <% }) %>
                <% } else { %>
                    <% if (errorType === 'banned') { %>
                        <a href="https://hexarion.net/discord" class="discord-btn hover-glow">
                            <i class="fab fa-discord"></i> Appeal Ban
                        </a>
                    <% } else if (errorType === 'ratelimited') { %>
                        <a href="/" class="action-btn hover-glow">
                            <i class="fas fa-home"></i> Return Home
                        </a>
                    <% } else if (errorType === '404') { %>
                        <a href="/" class="action-btn hover-glow">
                            <i class="fas fa-home"></i> Return Home
                        </a>
                    <% } else { %>
                        <a href="/" class="action-btn hover-glow">
                            <i class="fas fa-redo"></i> Try Again
                        </a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </main>

    <% if (config.analytics.google.enabled) { %>
        <!-- Google Analytics -->
        <script async
            src="https://www.googletagmanager.com/gtag/js?id=<%= config.analytics.google.tracking_id %>"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', '<%= config.analytics.google.tracking_id %>');
        </script>
    <% } %>

    <script src="/js/main.js"></script>
</body>

</html>